type Cliente{
    id:ID!
    nome:String!
    email:String!
}

input ClienteInput {
    id:ID
    nome:String!
    email:String!
}

extend type Query {

    cliente(id:ID!):Cliente
    clientes:[Cliente]!
}

extend type Mutation {
    salvarCliente(input:ClienteInput!):Cliente!
    deletarCliente(id:ID!):Boolean!
}