type Cliente{
    id:ID!
    nome:String!
    email:String!
}

input ClienteInput {
    id:ID
    nome:String!
    email:String!
}

extend type Query {

    cliente(id:ID!):Cliente

    clientes:[Cliente]!
}

extend type Mutation {
    save(input:ClienteInput!):Cliente!
    delete(id:ID!):Boolean!
}